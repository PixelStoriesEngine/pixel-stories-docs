---
import Footer from "./Footer/Footer.astro";
import TabsShowcase from "./TabsShowcase.svelte";
import img from "../assets/images/dead-friend-horror.png";
import Image from "astro/components/Image.astro";
---

<main
  class="not-content relative mx-auto flex max-w-7xl flex-col gap-24 px-0 sm:px-6 lg:px-8"
>
  <!-- Background Decoration -->
  <div
    aria-hidden="true"
    class="pointer-events-none fixed inset-0 -z-10 overflow-hidden"
  >
    <div
      class="opacity-30 absolute -top-32 left-1/2 h-[600px] w-[1200px] -translate-x-1/2 rounded-full bg-gradient-to-r from-indigo-500/20 via-fuchsia-500/20 to-emerald-500/20 blur-3xl"
    >
    </div>
  </div>

  <!-- HERO -->
  <section class="mt-10 flex flex-col items-center gap-4 text-center">
    <div
      class="inline-flex items-center gap-2 rounded-full border border-neutral-500 px-3 py-1 text-xs font-medium"
    >
      <span>Late‑stage beta</span>
      <span>·</span>
      <a href="/blog" class="underline-offset-2 hover:underline text-white"
        >See what’s new</a
      >
    </div>

    <h1
      class="mx-auto max-w-3xl text-pretty text-4xl font-bold tracking-tight sm:text-5xl lg:text-5xl leading-tight"
    >
      PS Maker: <span class="text-nowrap">A Game Maker</span> for Story‑Driven Games
    </h1>
    <p
      class="mx-auto max-w-2xl text-balance text-base/7 text-gray-700 dark:text-gray-300 sm:text-lg"
    >
      PS Maker lets you tell immersive and captivating stories through games. No
      code required. Share instantly with friends!
    </p>

    <a
      href="https://app.pixelstories.io"
      class="btn-primary"
      target="_blank"
      rel="noopener noreferrer"
    >
      Create game now
    </a>
  </section>

  <section>
    <TabsShowcase client:load />
  </section>

  <!-- WHY DIFFERENT -->
  <section class="grid gap-8 p-4 lg:grid-cols-5">
    <div class="lg:col-span-2 flex flex-col gap-6">
      <h2 class="text-3xl font-bold">
        What makes <span class="text-nowrap">PS Maker</span> different?
      </h2>
      <p class="text-base leading-6 text-gray-700 dark:text-gray-300">
        PS Maker is made for creators who want to tell immersive and captivating
        stories through games, and not wrestle endlessly with code.
      </p>
      <a
        href="https://app.pixelstories.io"
        class="btn-primary px-10 max-lg:hidden"
        target="_blank"
        rel="noopener noreferrer"
      >
        Create game now
      </a>
    </div>
    <ul class="p-0 lg:col-span-3 grid gap-3 sm:grid-cols-2 sm:grid-rows-2">
      <li
        class="list-none rounded-2xl border bg-[var(--sl-color-bg)] p-5 text-sm shadow-sm"
      >
        <h3 class="font-semibold">For 2D story-driven games</h3>
        <p class="mt-3 text-gray-700 dark:text-gray-300">
          Built from the ground up for top-down, story-driven games.
        </p>
      </li>
      <li
        class="list-none rounded-2xl border bg-[var(--sl-color-bg)] p-5 text-sm shadow-sm"
      >
        <h3 class="font-semibold">No-code editor</h3>
        <p class="mt-3 text-gray-700 dark:text-gray-300">
          Tools for maps, dialogue, and mechanics, so you can focus on your
          story.
        </p>
      </li>
      <li
        class="list-none rounded-2xl border bg-[var(--sl-color-bg)] p-5 text-sm shadow-sm"
      >
        <h3 class="font-semibold">Free, built-in assets</h3>
        <p class="mt-3 text-gray-700 dark:text-gray-300">
          Start fast with free tiles, objects, and terrains. Upload custom
          assets anytime.
        </p>
      </li>
      <li
        class="list-none rounded-2xl border p-5 text-sm shadow-sm bg-[var(--sl-color-bg)]"
      >
        <h3 class="font-semibold">Share your game</h3>
        <p class="mt-3 text-gray-700 dark:text-gray-300">
          Instantly share your game with friends. Playable cross-platform in the
          web.
        </p>
      </li>
    </ul>
    <a
      href="https://app.pixelstories.io"
      class="btn-primary px-10 lg:hidden"
      target="_blank"
      rel="noopener noreferrer"
    >
      Create game now
    </a>
  </section>

  <!-- FEATURED GAME / SPLASH SECTION -->
  <section
    class="grid gap-8 p-4 mx-auto justify-items-center md:grid-cols-2 max-md:max-w-lg"
  >
    <a
      href="https://app.pixelstories.io/embed/ucUR89FNTR"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src={img}
        alt="Gameplay screenshot"
        class="not-content aspect-[5/4] w-full max-md:aspect-[4/3] h-auto rounded-[2.25rem] object-cover"
      />
    </a>

    <div class="max-w-xl py-6 space-y-6">
      <div class="space-y-2">
        <p class="text-lg font-medium">Made with PS Maker</p>

        <h2 class="text-pretty text-3xl font-bold tracking-tight sm:text-5xl">
          Dead Friend Horror
        </h2>
      </div>

      <p class="text-base leading-7 text-gray-700 dark:text-gray-300">
        A fun hangout with your best friend suddenly turns sideways when a
        killer in the night "takes" your friend.
      </p>

      <div>
        <a
          href="https://app.pixelstories.io/embed/ucUR89FNTR"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-ghost">Play now</a
        >
      </div>
    </div>
  </section>

  <!-- COMMUNITY -->
  <section
    class="flex flex-col items-center justify-center text-center p-4 py-8"
  >
    <div class="max-w-xl flex flex-col gap-4 items-center">
      <h2 class="text-4xl font-bold">
        A community that loves making 2D story-driven games
      </h2>
      <p class="text-base text-gray-700 dark:text-gray-300">
        Share your work, get feedback, playtest, and connect with creators who
        love story-driven games!
      </p>
      <a href="https://discord.gg/your-invite" class="btn-ghost"
        >Join our Discord</a
      >
    </div>
  </section>

  <!-- FINAL CTA -->
  <section
    class="mb-20 overflow-hidden rounded-3xl border bg-gradient-to-r from-gray-600 to-gray-800 dark:from-gray-800 dark:to-gray-900 p-8 py-14 text-white shadow-sm"
  >
    <div
      class="mx-auto grid max-w-5xl items-center gap-8 lg:grid-cols-3 text-black dark:text-white"
    >
      <div class="lg:col-span-2 space-y-4">
        <h2 class="text-3xl font-extrabold">Ready to start?</h2>
        <p class="mt-2 text-lg leading-6">
          Create your first game in minutes. Free to try. Runs in your browser.
        </p>
      </div>
      <div class="flex items-center gap-3 lg:justify-end">
        <a href="https://app.pixelstories.io/" class="btn-primary w-full"
          >Create game now</a
        >
      </div>
    </div>
  </section>
</main>

<Footer />
